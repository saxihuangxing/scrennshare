[Unit]
Description=High-performance, schema-free document-oriented database
After=network.target
Documentation=https://docs.mongodb.org/manual

[Service]
User=mongodb
Group=mongodb
PermissionsStartOnly=true
#ExecStartPre=/usr/share/meteor/bundle/mongod_start_pre.sh
ExecStart=/usr/bin/mongod  --bind_ip 127.0.0.1 --port 8889 --dbpath /usr/local/bigbluebutton/rimpmanage/manage/db --oplogSize 8 --noauth
#PIDFile=/var/run/mongodb/mongod.pid

# file size
LimitFSIZE=infinity
# cpu time
LimitCPU=infinity
# virtual memory size
LimitAS=infinity
